{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "target": "es5",
        "baseUrl": ".",
        "paths": {
            "*": [
                "*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "jspm_packages",
        "types"
    ]
}